<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Relapse" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/relapse" />

    <Button
        android:id="@+id/btncause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="42dp"
        android:background="#ff84ff"
        android:text="Causes of Relapse" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btncause"
        android:layout_alignRight="@+id/btncause"
        android:layout_below="@+id/btncause"
        android:layout_marginTop="18dp"
        android:background="#ff84ff"
        android:text="Signs of Relapse" />

    <Button
        android:id="@+id/btnrecovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnsign"
        android:layout_alignRight="@+id/btnsign"
        android:layout_below="@+id/btnsign"
        android:layout_marginTop="15dp"
        android:background="#ff84ff"
        android:text="Getting My Life Back" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btncause"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btncause"
        android:layout_marginTop="23dp"
        android:background="#ff80ff"
        android:text="DEPRESSION RELAPSE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>