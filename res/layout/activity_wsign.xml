<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#ff84ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Wsign" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/dep4" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="15dp"
        android:text="The following suggest a depressed woman:&#xA;"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="14dp"
        android:text="1.persistent sad,anxious or empty mood.&#xA;2.loss of interest or pleasure in activities including sex.&#xA;3.Excessive crying,irritability or restlessness.&#xA;4. feelings of guilt, worthlessness, helplessness, hopelessness.&#xA;5.Sleeping too much or too little.&#xA;6.Appetite and weight loss.&#xA;7.Decreased energy and fatigue.&#xA;7.Thoughts of death or suicide or suicide attempts.&#xA;8.Difficulty concentrating,remembering or making decisions.&#xA;9.Physical symptoms that dont respond to treatment eg headaches " />

</RelativeLayout>