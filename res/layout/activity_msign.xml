<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dep2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Msign" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="15dp"
        android:text="1.You feel hopeless and helpless.&#xA;2.Loss of interest in friends and activities you love.&#xA;3.More Short-tempered,irritable and aggressive than ussual.&#xA;4.Consuming more alcohol,reckless behaviour and more/less engagement in sex.&#xA;5.feeling restless and agitated.&#xA;6.sleep and appetite change.&#xA;7.loss of concentration or productivity at work decline.&#xA;8.You can not control negative thoughts.&#xA;"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="The signs and symptoms are similar to the effects experienced by the patient suffering from depression."
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>